@using MvcCv.Models.Entity;
@model List<TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hakkımda Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" class="form-control" name="Name" value="@item.Name">
        <br />
        <label>Soyad</label>
        <input type="text" class="form-control" name="Surname" value="@item.Surname">
        <br />
        <label>Adres</label>
        <input type="text" class="form-control" name="Address" value="@item.Address">
        <br />
        <label>Telefon Numarası</label>
        <input type="text" class="form-control" name="PhoneNumber" value="@item.PhoneNumber">
        <br />
        <label>Email Adresi</label>
        <input type="email" class="form-control" name="Email" value="@item.Mail">
        <br />
        <label>Resim</label>
        <input type="text" class="form-control" name="Image" value="@item.Image">
        <br />
        <label>Açıklama </label>
        <textarea rows="5" class="form-control" name="Description">@item.Description</textarea>
        <br />
    }
    <button class="btn btn-success">Güncelle</button>
</form>
